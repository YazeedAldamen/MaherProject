@using Microsoft.AspNetCore.Identity;
@using DataLayer.Entities;

@inject SignInManager<AspNetUser> SignInManager
@inject UserManager<AspNetUser> UserManager


@{
    var currentCulture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
    var newCulture = currentCulture == "en-US" ? "ar" : "en-US";
    var cultureText = currentCulture == "en-US" ? "Arabic" : "English";
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <div class="nav-item dropdown login_btn">
                    <a class=" nav-link dropdown-toggle pe-5 me-5" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-user"></i> UserName
                </a>
                <ul class="dropdown-menu">

                    <li><a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a></li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button id="logout" type="submit" class="dropdown-item">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
                <a class="login_btn pe-5  me-5" id="login" asp-area="Identity" asp-page="/Account/Login">@_localization.Getkey("Login") <i class='bx bx-log-in'></i></a>
        </li>
    }

    <li>
        <a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="@newCulture" class="nav-link" style="color:white;">
            Switch to @cultureText
        </a>
    </li>
</ul>